<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>MY APP</title>
  </head>
  <body>
    <h1>May Node and Express be with you.</h1>
    <form action="/tasks" method="POST">
      <input type="text" placeholder="name" name="name" />
      <input type="text" placeholder="task" name="task" />
      <button type="submit">Submit</button>
    </form>
    <h2> Tasks </h2>

<ul class="tasks">
  <!-- Loop through quotes -->
  <% for(var i = 0; i < tasks.length; i++) {%>
    <li class="task">
      <!-- Output name from the iterated quote object -->
      <span><%= tasks[i].name %></span>:
      <!-- Output quote from the iterated quote object -->
      <span><%= tasks[i].task %></span>
    </li>
  <% } %>
</ul>
  </body>
</html>